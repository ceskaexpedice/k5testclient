<tools>
    <data type="boolean" key="xhtml" value="true"/>
    <data type="boolean" key="isSimple" value="true"/>
    <data type="number" key="version" value="2.0"/>
    <data key="searchHomeDocumentTypes" value="monograph,periodical,page" type="list"/>
    <toolbox scope="request">
        <tool key="esc" class="org.apache.velocity.tools.generic.EscapeTool" />
        <tool key="import" class="org.apache.velocity.tools.view.ImportTool" />
     <tool class="org.apache.velocity.tools.generic.ConversionTool"
              dateFormat="yyyy-MM-dd"/>
        <tool class="org.apache.velocity.tools.generic.ResourceTool"
              bundles="labels"/>
        <tool key="langTool" class="cz.incad.kramerius.k5.k5velocity.tools.LanguageTool" />
        <tool key="link" class="org.apache.velocity.tools.view.LinkTool" />
        <tool key="date" class="org.apache.velocity.tools.generic.DateTool" />
        <tool class="org.apache.velocity.tools.view.ParameterTool" />
        <tool class="org.apache.velocity.tools.generic.ResourceTool"
              bundles="res.configuration"
              key="conf"/>
              
        <tool key="headerViewObject" class="cz.incad.kramerius.k5.k5velocity.views.HeaderViewObject" />
        <tool key="rssHome" class="cz.incad.kramerius.k5.k5velocity.views.RSSHomeViewObject" />
        <tool key="search" class="cz.incad.kramerius.k5.k5velocity.tools.Search" />
        <tool key="item" class="cz.incad.kramerius.k5.k5velocity.tools.Item" />
        <tool key="xslt" class="cz.incad.kramerius.k5.k5velocity.tools.XSLTool" />

        <tool key="logControl" class="cz.incad.kramerius.k5.k5velocity.views.LoggedController" />
        <tool key="menu" class="cz.incad.kramerius.k5.k5velocity.views.MenuController" />


        <tool key="vc" class="cz.incad.kramerius.k5.k5velocity.tools.VirtualCollectionsTool" />
     <tool key="pidconvert" stringsDelimiter="/" class="org.apache.velocity.tools.generic.ConversionTool"
              dateFormat="yyyy-MM-dd"/>
     
     <!-- social buttons -->
     <tool key="gplus" class="cz.incad.kramerius.k5.k5velocity.views.GooglePlusButton" />
     <tool key="tweet" class="cz.incad.kramerius.k5.k5velocity.views.TweetButton" />
     <tool key="fb" class="cz.incad.kramerius.k5.k5velocity.views.FacebookLikeItButton" />
     
    </toolbox>
    <toolbox scope="session">
        <tool key="map" class="java.util.HashMap"/>
    </toolbox>
    <toolbox scope="application">
   </toolbox>
</tools>